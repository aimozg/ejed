    <function name="CreatureHasPerk" return="boolean">
        <listname>Creature: Has Perk</listname>
        <param name="Creature" type="Creature" default="player"/>
        <param name="Has" type="HasOrNot" default="true"/>
        <param name="Perk" type="PerkType"/>
        <editor>
            <param name="Creature"/>
