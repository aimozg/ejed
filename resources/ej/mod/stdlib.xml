        <param name="Creature" type="Creature" default="player"/>
        <param name="Trait" type="CreatureTrait"/>
        <param name="Invert" type="boolean" default="false"/>
        <editor>
            <param name="Creature"/>
            <param name="Trait" type="SELECT"/>
            <param name="Invert" type="CHECKBOX" typedata="not"/>
        </editor>
